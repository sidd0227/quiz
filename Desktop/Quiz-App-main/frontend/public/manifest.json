{
  "name": "QuizNest - Smart Learning Platform",
  "short_name": "QuizNest",
  "description": "AI-powered quiz platform with real-time multiplayer battles, personalized study buddy, and adaptive learning",
  "version": "2.0.0",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#1a1a2e",
  "theme_color": "#16213e",
  "orientation": "portrait-primary",
  "scope": "/",
  "lang": "en-US",
  "icons": [
    {
      "src": "/quiz-img.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/quiz-img.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    }
  ],
  "screenshots": [
    {
      "src": "/quiz-img.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Quiz Dashboard"
    },
    {
      "src": "/quiz-img.png",
      "sizes": "750x1334",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Mobile Quiz Interface"
    }
  ],
  "categories": ["education", "games", "productivity"],
  "shortcuts": [
    {
      "name": "Take Quick Quiz",
      "short_name": "Quick Quiz",
      "description": "Start a quick quiz session",
      "url": "/user/test",
      "icons": [
        {
          "src": "/quiz-img.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "AI Study Buddy",
      "short_name": "AI Tutor",
      "description": "Chat with your AI study assistant",
      "url": "/ai-study-buddy",
      "icons": [
        {
          "src": "/quiz-img.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Real-Time Battle",
      "short_name": "Live Quiz",
      "description": "Join live multiplayer quiz battles",
      "url": "/real-time-quiz",
      "icons": [
        {
          "src": "/quiz-img.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Dashboard",
      "short_name": "Dashboard",
      "description": "View your learning progress",
      "url": "/enhanced-dashboard",
      "icons": [
        {
          "src": "/quiz-img.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "prefer_related_applications": false,
  "related_applications": [],
  "protocol_handlers": [
    {
      "protocol": "web+quiznest",
      "url": "/share?quiz=%s"
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "GET",
    "enctype": "application/x-www-form-urlencoded",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "handle_links": "preferred",
  "display_override": [
    "window-controls-overlay",
    "standalone",
    "minimal-ui"
  ]
}
